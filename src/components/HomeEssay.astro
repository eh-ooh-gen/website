---
let { title, id, when, url } = Astro.props;
---

<div class="essay">
  <div class="name-and-details">
    <h3><a href={url}>{title}</a></h3>
    <div class="details type-mono">Essay {id} â€¢ {when}</div>
  </div>
  <p>
    <slot />
  </p>
</div>

<style>
  .essay {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 8px;
  }
  .name-and-details {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-block: 4px;
  }
  .name-and-details h3 {
    font-weight: 500;
    padding-block: 4px;
  }
  .details {
    font-size: calc(15 / 16 * 1rem);
