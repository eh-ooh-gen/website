---
let { name, duration, url } = Astro.props;
---

<div class="project">
  <div class="name-and-duration">
    <h3><a href={url}>{name}</a></h3>
    <div class="type-h3">{duration}</div>
  </div>
  <p>
    <slot />
  </p>
</div>

<style>
  .project {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 8px;
  }
  .name-and-duration {
    display: flex;
    flex-direction: row;
    gap: 16px;
    justify-content: space-between;
    padding-block: 4px;
  }
  .name-and-duration h3,
  .name-and-duration .type-h3 {
    font-weight: 500;
  }
</style>
